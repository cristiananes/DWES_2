<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Astronautas</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Astronautas</h1>

        <!-- Formulario para añadir astronautas -->
        <form id="astronautForm" class="mb-4">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" id="nombre" class="form-control" placeholder="Nombre" required>
                </div>
                <div class="col-md-4">
                    <input type="number" id="edad" class="form-control" placeholder="Edad" required>
                </div>
                <div class="col-md-4">
                    <input type="text" id="nacionalidad" class="form-control" placeholder="Nacionalidad" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Añadir Astronauta</button>
        </form>

        <!-- Tabla de astronautas -->
        <table class="table table-hover table-sm">
            <thead class="table-dark">
                <tr>
					<th>id</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Nacionalidad</th>
                </tr>
            </thead>
            <tbody id="astronautTableBody">
                <!-- Filas generadas dinámicamente -->
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (Opcional para funcionalidad avanzada) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Seleccionar el formulario y la tabla
        const form = document.getElementById('astronautForm');
        const tableBody = document.getElementById('astronautTableBody');

        // Manejar el evento de envío del formulario
        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Evitar el envío del formulario

            // Obtener valores de los campos
            const nombre = document.getElementById('nombre').value;
            const edad = document.getElementById('edad').value;
            const nacionalidad = document.getElementById('nacionalidad').value;

            // Crear una nueva fila en la tabla
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${nombre}</td>
                <td>${edad}</td>
                <td>${nacionalidad}</td>
            `;

            // Añadir la fila a la tabla
            tableBody.appendChild(row);

            // Limpiar el formulario
            form.reset();
        });
    </script>
</body>
</html>
